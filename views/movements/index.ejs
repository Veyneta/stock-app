<%- include('../partials/header', { title: title }) %>

<div class="page-header">
  <div>
    <h1>ประวัติสต๊อก</h1>
    <p class="muted">รายการเคลื่อนไหวทั้งหมด</p>
  </div>
  <div class="actions">
    <a class="btn btn-primary" href="/movements/new">ทำรายการใหม่</a>
  </div>
</div>

<div class="table-wrap">
  <table>
    <thead>
      <tr>
        <th>วันที่</th>
        <th>สินค้า</th>
        <th>ประเภท</th>
        <th>จำนวน</th>
        <th>หมายเหตุ</th>
        <th>โดย</th>
      </tr>
    </thead>
    <tbody>
      <% if (movements.length === 0) { %>
        <tr>
          <td colspan="6" class="muted">ยังไม่มีรายการ</td>
        </tr>
      <% } %>
      <% movements.forEach((movement) => { %>
        <tr>
          <td><%= new Date(movement.created_at).toLocaleString() %></td>
          <td><%= movement.product_name %></td>
          <td>
            <span class="badge badge-<%= movement.type %>">
              <%= movement.type === 'in' ? 'รับเข้า' : movement.type === 'out' ? 'เบิกมาใช้' : 'ปรับยอด' %>
            </span>
          </td>
          <td><%= movement.qty %></td>
          <td><%= movement.note || '-' %></td>
          <td><%= movement.created_by_name %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
